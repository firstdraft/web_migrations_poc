<h1>
  All tables
</h1>

<hr>

<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead class="thead-inverse">
      <th>
        Table
      </th>

      <th colspan="<%= @most_columns %>">
        Columns
      </th>
    </thead>

    <tbody>
      <% @tables.each do |table| %>
      <tr>
        <th>
          <%= link_to table, web_table_path(table) %>
        </th>

        <% table.columns.each do |column| %>
        <td>
          <%= column.name %>
        </td>
        <% end %>

        <% (@most_columns - table.columns.count).times do %>
        <td></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p class="lead">
  What would you like to do?
</p>

<div class="btn-group-vertical btn-block">
  <a href="#" class="btn btn-secondary">
    Add a new table (only model, first:scaffold, scaffold, etc)
  </a>

  <a href="#" class="btn btn-secondary">
    Drop a table (destroy a whole scaffold?)
  </a>
</div>
